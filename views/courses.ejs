
<%- include('partials/_header', { title: 'Courses' }) %>

<div class="container">
  <div class="text-center mb-5">
    <h2 class="fw-bold">Available Courses</h2>
    <p class="text-muted">Start your learning journey today</p>
  </div>
  
  <div class="row g-4">
    <% courses.forEach((course) => { %>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <% if (course.status === 'enrolled') { %>
                    <span class="badge bg-success mb-2">Enrolled</span>
                <% } %>
                <h5 class="card-title"><%= course.title %></h5>
                <p class="card-text text-muted"><%= course.description %></p>
            </div>
            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-warning">★ ★ ★ ★ ★</span>
                    <span class="text-muted ms-1">(124)</span>
                </div>
                <% if (course.status === 'enrolled') { %>
                    <button class="btn btn-sm btn-outline-secondary" disabled>Enrolled</button>
                <% } else { %>
                    <form action="/courses/<%= course.id %>/join" method="post">
                        <input type="hidden" name="user_id" value="<%= user.id %>">
                        <input type="hidden" name="course_id" value="<%= course.id %>">
                        <button type="submit" class="btn btn-sm btn-outline-primary">Enroll Now</button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
    <% }); %>

  </div>
</div>

<%- include('partials/_footer') %>