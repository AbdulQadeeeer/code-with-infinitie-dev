
<%- include('partials/_header', { title: 'Courses' }) %>

<div class="container">
  <div class="text-start mb-3">
    <h2 class="fw-bold"><%= course.title %></h2>
  </div>

  <div class="text-start mb-3">
    <h3 class="fw-bold">Lectures</h3>
  </div>
  
  <ul class="list-group">
    <% if(lectures.length === 0){ %>
        <p class="text-center">No lectures found</p>
    <% } else { %>
      <% lectures.forEach((lecture, index) => { %>
      <li class="list-group-item position-relative">
        <span class=""><%= index + 1 %> - </span>
        <a href="/lectures/<%= lecture.id %>"><%= lecture.title %></a>
        <div class="d-flex justify-content-end">
          <p class="<%= lecture.status === 'open' ? 'text-success' : 'text-danger' %> mb-0"><i class="bi bi-chat-fill"></i> <%= lecture.status %> ( <%= lecture.comment_count %> )</p>
        </div>
      </li>
      <% }); %>
    <% } %>
    </ul>
</div>

<%- include('partials/_footer') %>