<%- include('partials/_header', { title: 'Dashboard' }) %>

<div class="row p-0 py-5 m-0 mt-5">
  <div class="col-lg-2 col-md-2 d-lg-inline d-md-inline d-none">
    <%- include('partials/_sidebar') %>
  </div>
  <div class="col-lg-10 col-md-10 col-sm-12">
    <h1 class="mb-4"><%= user.name %>'s Courses</h1>
  <!-- User's Courses Section -->
  <div class="row">
    <% if (courses.length > 0) { %>
      <% courses.forEach(course => { %>
        <div class="col-lg-6 col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text text-muted"><%= course.description %></p>
            </div>
            <div class="card-footer bg-transparent d-flex gap-2 align-items-center">
              <form action="/assignments" method="get">
                <input type="hidden" name="course_id" value="<%= course.id %>">
                <button type="submit" class="btn btn-sm btn-primary w-100">Assignments</button>
              </form>
              <form action="/announcements" method="get">
                <input type="hidden" name="course_id" value="<%= course.id %>">
                <% if (unviewedCount > 0) { %>
                                <span class="position-absolute bg-danger rounded-circle px-1" 
                                    style="left: 8px; top: 5px !important; font-size: 10px;">
                                    <%= unviewedCount %>
                                </span>
                            <% } %>
                <button type="submit" class="btn btn-sm btn-primary w-100">Announcements</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <h4>You haven't enrolled in any courses yet.</h4>
        <a href="/courses" class="btn btn-primary mt-3">Browse Courses</a>
      </div>
    <% } %>
  </div>
  </div>
</div>

<%- include('partials/_footer') %>
















