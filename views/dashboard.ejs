<%- include('partials/_header', { title: 'Dashboard' }) %>

<div class="container py-6">
  <h1 class="mb-4">Welcome back, <%= user.name %>!</h1>
  
  <!-- User's Courses Section -->
  <div class="row g-4">
    <% if (courses.length > 0) { %>
      <% courses.forEach(course => { %>
        <div class="col-md-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text text-muted"><%= course.description %></p>
              <div class="progress mb-3">
                <div class="progress-bar" style="width: <%= course.progress %>%"></div>
              </div>
            </div>
            <div class="card-footer bg-transparent">
              <a href="/courses/<%= course.id %>" class="btn btn-sm btn-primary">Continue</a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <h4>You haven't enrolled in any courses yet.</h4>
        <a href="/courses" class="btn btn-primary mt-3">Browse Courses</a>
      </div>
    <% } %>
  </div>
</div>

<%- include('partials/_footer') %>