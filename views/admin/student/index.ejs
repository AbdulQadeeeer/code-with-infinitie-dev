<%- include('../partials/_header', { title: 'Courses' }) %>
    <div class="row m-0">
        <div class="col-2 min-vh-100 position-fixed bg-primary-subtle">
            <%- include('../partials/_sidebar') %>
        </div>
        <div class="col-10 bg-warning-subtle p-0" style="margin-left: auto;">
            <div class="position-sticky bg-danger-subtle" style="top: 0px;z-index: 1000;">
                <div class="navbar px-3">
                    <div class="nav-item">
                        <h3>Dashboard</h3>
                    </div>
                    <div class="nav-item">
                        <a href="/auth/logout" class="btn btn-danger">Logout</a>
                    </div>
                </div>
            </div>
            <div class="col-12 px-3">
                <div class="col-12 table-responsive">
                    <h3>Students</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check form-check-muted m-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input" id="check-all">
                                        </label>
                                    </div>
                                </th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Repository</th>
                                <th>Page</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="students-data" class="table-group-divider">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/students.js"></script>
    <%- include('../partials/_footer') %>