<%- include('../partials/_header', { title: 'Submitted Assignments' }) %>
    <div class="row m-0">
        <div class="col-2 min-vh-100 position-fixed bg-primary-subtle">
            <%- include('../partials/_sidebar') %>
        </div>
        <div class="col-10 bg-warning-subtle p-0" style="margin-left: auto;">
            <div class="position-sticky bg-danger-subtle" style="top: 0px;z-index: 1000;">
                <div class="navbar px-3">
                    <div class="nav-item">
                        <h3>Dashboard</h3>
                    </div>
                    <div class="nav-item">
                        <a href="/auth/logout" class="btn btn-danger">Logout</a>
                    </div>
                </div>
            </div>
            <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Submitted Assignments</h2>
    </div>

    <% if (assignments.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Student ID</th>
                        <th>Assignment ID</th>
                        <th>Submission Date</th>
                        <th>File</th>
                        <th>Status</th>
                        <th>Gained Marks</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% assignments.forEach((assignment, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= assignment.user_id %></td>
                            <td><%= assignment.assignment_id %></td>
                            <td><%= assignment.submission_date %></td>
                            <td>
                                <a href="/download/<%= assignment.id %>" 
                                   class="btn btn-sm btn-outline-primary"
                                   download="<%= assignment.file_path.originalName %>">
                                    Download
                                </a>
                            </td>
                            <td>
                                <span class="badge <%= assignment.status === 'graded' ? 'bg-success' : 'bg-warning' %>">
                                    <%= assignment.status %>
                                </span>
                            </td>
                            <td>
                                <%= assignment.gained_marks || '-' %>
                            </td>
                            <td>
                                <form action="/users/admin/assignments/submitted/<%= assignment.id %>">
                                    <input type="hidden" name="course_id" id="<%= courseId %>" value="<%= courseId %>">
                                    <input type="submit" value="View Details" class="btn btn-sm btn-primary">
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            No assignments have been submitted for this course yet.
        </div>
    <% } %>
</div>


        </div>
    </div>
<%- include('../partials/_footer') %>