<%- include('../partials/_header', { title: 'Edit Assignment' }) %>
    <h4 class="fw-bold pt-4 pb-1">Edit Assignment</h4>
    <div class="row pb-5">
        <form action="/users/admin/assignments/<%= assignment.id %>/update" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" value="<%= assignment.title %>" name="title">
            </div>
            <div class="mb-3">
                <label for="details" class="form-label">Details</label>
                <%- include('../partials/_richTextEditor', { name: 'details' , content: assignment.details }) %>
            </div>
            <div class="mb-3">
                <label for="due_date" class="form-label">Due Date</label>
                <input type="date" class="form-control" name="due_date" value="<%= assignment.due_date.toISOString().split('T')[0] %>" id="due_date">

            </div>
            <div class="mb-3">
                <label for="total_marks" class="form-label">Total Marks</label>
                <input type="number" class="form-control" id="total_marks" value="<%= assignment.total_marks %>"
                    name="total_marks">
            </div>
            <div class="mb-3">
                <select name="course_id" id="course_id" class="form-select">
                    <option value="">Select Course</option>
                    <% courses.forEach(course=> { %>
                        <option value="<%= course.id %>" <%=course.id===assignment.course_id ? 'selected' : '' %>>
                            <%= course.title %>
                        </option>
                        <% }) %>
                </select>

            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/users/admin/assignments" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
    <%- include('../partials/_footer') %>